# =============================================================================
# Environment Configuration
# =============================================================================

# Set the environment (development, production, test)
NODE_ENV=development

# =============================================================================
# Server Configuration
# =============================================================================

# Server port
PORT=3669

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pawsitiv
POSTGRES_USER=postgres
POSTGRES_PASSWORD=pawsitiv123

# Database connection retry settings
POSTGRES_CONNECTION_RETRIES=10
POSTGRES_CONNECTION_DELAY=5000

# =============================================================================
# Security Configuration
# =============================================================================

# Session secret (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-here

# Frontend URL for CORS (production only)
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# Development Configuration
# =============================================================================

# Auto-seed database on startup (development only)
SEED_DATABASE=false

# =============================================================================
# File Upload Configuration
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# Production Specific Settings
# =============================================================================

# Enable HTTPS in production
HTTPS_ENABLED=true

# SSL certificate paths (production only)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem 