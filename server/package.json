{
  "name": "pawsitiv-server",
  "version": "1.0.0",
  "description": "A cat app in Express, we like cats",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/app.js",
    "dev": "NODE_ENV=development ts-node ./app.ts",
    "dev:watch": "NODE_ENV=development nodemon --watch . --ext ts --exec ts-node ./app.ts",
    "dev:seed": "NODE_ENV=development SEED_DATABASE=true ts-node ./app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "ts-node ./db/migrate.ts",
    "db:seed": "ts-node ./db/seed.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "cat"
  ],
  "author": "Pawsitiv Development Team",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0"
  }
}
