{
  "name": "pawsitiv",
  "version": "1.0.0",
  "description": "Pawsitiv - Cat Adoption Platform",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "prod": "docker compose -f docker-compose.prod.yml up --build -d",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "start": "docker compose up --build -d",
    "stop": "docker compose down",
    "restart": "docker compose restart",
    "logs": "docker compose logs -f",
    "seed": "docker compose --profile seed up seeder",
    "seed:dev": "docker compose -f docker-compose.dev.yml --profile seed up seeder",
    "seed:prod": "docker compose -f docker-compose.prod.yml --profile seed up seeder",
    "clean": "docker compose down -v && docker system prune -f",
    "clean:dev": "docker compose -f docker-compose.dev.yml down -v",
    "clean:prod": "docker compose -f docker-compose.prod.yml down -v",
    "build": "docker compose build",
    "build:dev": "docker compose -f docker-compose.dev.yml build",
    "build:prod": "docker compose -f docker-compose.prod.yml build",
    "status": "docker compose ps",
    "status:dev": "docker compose -f docker-compose.dev.yml ps",
    "status:prod": "docker compose -f docker-compose.prod.yml ps"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "express-session": "^1.18.2",
    "sharp": "^0.34.3"
  }
}
